{
  "//": "JSHint configuration - http://jshint.com/docs/options/",
  "name": "node-web",
  "version": "2.0.0",
  "description": "Template project for a node express web server",
  "main": "app.js",
  "private": true,
  "license": "MIT",
  "author": "KTH",
  "repository": {
    "type": "git",
    "uri": "https://github.com/KTH/node-web"
  },
  "scripts": {
    "test": "NODE_ENV=development mocha --exit test/unit/*.js",
    "codecheck": "standard",
    "codefix": "standard --fix",
    "docker": "npm install --development && npm run build && npm prune --production",
    "build": "NODE_ENV=production gulp build --preserve-comments",
    "start": "NODE_ENV=production node app.js",
    "start-dev": "cross-env NODE_ENV=development gulp build && cross-env NODE_ENV=development concurrently --kill-others \"nodemon --ignore dist/ app.js\" \"gulp watch\""
  },
  "dependencies": {
    "bluebird": "^3.5.3",
    "body-parser": "^1.18.3",
    "bootstrap": "^4.1.3",
    "co": "^4.6.0",
    "component-registry": "^1.0.0-rc.7",
    "cookie-parser": "^1.4.3",
    "dotenv": "^6.1.0",
    "express": "^4.16.4",
    "express-handlebars": "^3.0.0",
    "jquery": "^3.3.1",
    "kth-node-access-log": "^0.2.0",
    "kth-node-api-call": "^2.0.0",
    "kth-node-configuration": "^1.6.4",
    "kth-node-express-routing": "^0.4.0",
    "kth-node-i18n": "^1.0.2",
    "kth-node-ldap": "^2.3.8",
    "kth-node-log": "^3.0.2",
    "kth-node-monitor": "^0.1.11",
    "kth-node-passport-cas": "^3.1.7",
    "kth-node-redis": "^2.0.0",
    "kth-node-server": "^3.1.1",
    "kth-node-session": "^1.0.3",
    "kth-node-web-common": "^1.0.2",
    "locale": "^0.1.0",
    "passport": "^0.4.0",
    "popper.js": "^1.14.5",
    "safe-utils": "^0.2.1"
  },
  "devDependencies": {
    "babel-core": "6.9.0",
    "babel-loader": "^6.2.4",
    "chai": "^4.2.0",
    "concurrently": "^4.1.0",
    "cross-env": "^5.2.0",
    "gulp": "^3.9.1",
    "husky": "^1.2.0",
    "kth-node-build-commons": "^3.0.3",
    "merge-stream": "^1.0.1",
    "mocha": "5.2.0",
    "mockery": "^2.1.0",
    "nock": "^10.0.2",
    "node-mocks-http": "^1.7.3",
    "nodemon": "^1.18.7",
    "standard": "^12.0.1",
    "zombie": "6.1.3"
  },
  "engines": {
    "node": "8.12.0"
  },
  "jshintConfig": {
    "maxerr": 5
  },
  "standard": {
    "ignore": [
      "public/js/lib"
    ]
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run codecheck && npm run test"
    }
  }
}
