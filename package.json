{
  "//": "JSHint configuration - http://jshint.com/docs/options/",
  "name": "node-web",
  "version": "2.0.0",
  "description": "Template project for a node express web server",
  "main": "app.js",
  "private": true,
  "license": "MIT",
  "author": "KTH",
  "repository": {
    "type": "git",
    "uri": "https://github.com/KTH/node-web"
  },
  "scripts": {
    "babel": "babel public/js/app -d dist/js ",
    "vendor": "parcel build  ./public/js/vendor.js",
    "test": "NODE_ENV=development mocha --exit test/unit/*.js",
    "codecheck": "standard",
    "codefix": "standard --fix",
    "docker": "npm install --development && npm run build && npm prune --production",
    "build": "NODE_ENV=production rm -rf dist && parcel build ./public/js/app/app.jsx && npm run vendor --preserve-comments",
    "build-dev": "cross-env NODE_ENV=development rm -rf dist && parcel build --no-minify ./public/js/app/app.jsx && npm run vendor",
    "start": "NODE_ENV=production node app.js",
    "start-dev": "NODE_ENV=development rm -rf dist && parcel build --no-minify ./public/js/app/app.jsx && npm run vendor && parcel watch ./public/js/app/app.jsx"
  },
  "dependencies": {
    "bluebird": "^3.5.3",
    "body-parser": "^1.18.3",
    "component-registry": "^1.0.0-rc.7",
    "cookie-parser": "^1.4.3",
    "dotenv": "^6.1.0",
    "express": "^4.16.4",
    "express-handlebars": "^3.0.0",
    "jquery": "^3.3.1",
    "kth-node-access-log": "^0.2.0",
    "kth-node-api-call": "^2.0.0",
    "kth-node-configuration": "^1.6.4",
    "kth-node-express-routing": "^0.4.0",
    "kth-node-i18n": "^1.0.2",
    "kth-node-ldap": "^2.3.8",
    "kth-node-log": "^3.0.2",
    "kth-node-monitor": "^0.1.11",
    "kth-node-passport-cas": "^3.1.7",
    "kth-node-redis": "^2.0.0",
    "kth-node-server": "^3.1.1",
    "kth-node-session": "^1.0.3",
    "kth-node-web-common": "^1.0.2",
    "kth-style": "^3.2.4",
    "locale": "^0.1.0",
    "mobx": "^5.9.0",
    "mobx-react": "^5.4.3",
    "parcel-bundler": "^1.12.3",
    "passport": "^0.4.0",
    "popper.js": "^1.14.5",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-router": "^5.0.0",
    "react-router-dom": "^5.0.0",
    "reactstrap": "^7.1.0",
    "safe-utils": "^0.2.1",
    "sass": "^1.17.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/plugin-proposal-decorators": "^7.4.0",
    "@babel/preset-env": "^7.4.2",
    "@babel/preset-react": "^7.0.0",
    "babel-loader": "^8.0.4",
    "chai": "^4.2.0",
    "concurrently": "^4.1.0",
    "cross-env": "^5.2.0",
    "gulp": "^3.9.1",
    "husky": "^1.2.0",
    "kth-node-build-commons": "^3.0.3",
    "merge-stream": "^1.0.1",
    "mocha": "5.2.0",
    "mockery": "^2.1.0",
    "nock": "^10.0.2",
    "node-mocks-http": "^1.7.3",
    "node-sass": "^4.11.0",
    "nodemon": "^1.18.7",
    "standard": "^12.0.1",
    "zombie": "6.1.3"
  },
  "engines": {
    "node": "8.12.0"
  },
  "jshintConfig": {
    "maxerr": 5
  },
  "standard": {
    "ignore": [
      "public/js/lib"
    ]
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run codecheck && npm run test"
    }
  }
}
